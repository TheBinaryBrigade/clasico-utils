{
  "name": "clasico-utils",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint --env browser,node --parser @typescript-eslint/parser **/*.ts && tslint --fix -c tslint.json 'src/**/*.ts' -e \"**/__test__/**\"",
    "test": "jest --silent .*.test.ts && npm run build:eval:doc && npm run build:web && npm run build:node",
    "build:eval:doc": "ts-node ./.buildevaldoc.ts",
    "build:web": "esbuild ./src/index.ts --global-name=ClasicoUtils --outfile=./dist/web/clasico-utils.js --bundle --sourcemap --target=chrome58,firefox57,safari11,edge16 && cp ./dist/web/clasico-utils.js ./docs/clasico-utils.js && cp ./dist/web/clasico-utils.js.map ./docs/clasico-utils.js.map",
    "build:node": "esbuild ./src/index.ts --outfile=./dist/node10.4/clasico-utils.js --bundle --sourcemap --platform=node --target=node10.4"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@jest/globals": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "esbuild": "^0.17.17",
    "eslint": "^8.39.0",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^5.0.4"
  }
}
